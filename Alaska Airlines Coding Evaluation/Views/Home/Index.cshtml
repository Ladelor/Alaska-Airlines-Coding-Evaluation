@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="page-header">
        <h1>Find a Flight</h1>
        <form class="navbar-form navbar-left" role="search" method="POST" action="../Flights/Find">
            <div class="form-group">
                <h3>Departing: <input type="text" name="departing" class="form-control" placeholder="From" /></h3>
                <h3>Arriving: <input type="text" name="arriving" class="form-control" placeholder="To" /></h3>
                <input type="submit" class="btn btn-info" value="Find"/>
            </div>
        </form>
    </div>
</div>

